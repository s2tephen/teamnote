<%= simple_form_for(@note, :defaults => { :input_html => { :class => 'form-control' }, :wrapper_html => { :class => 'form-group' }}) do |f| %>
  <% if @note.errors.include?(:title) %>
    <%= f.input :title, input_html: { id: 'inputError' }, wrapper_html: { :class => 'has-error' } %>
  <% else %>
    <%= f.input :title %>
  <% end %>
  <% if @note.errors.include?(:content) %>
    <%= f.input :content, input_html: { id: 'inputError' }, wrapper_html: { :class => 'has-error' } %>
  <% else %>
    <%= f.input :content %>
  <% end %>
  <%= f.association :users, collection: @users, label: 'Share with...', label_method: :email %>
  <%= f.button :submit %>
<% end %>