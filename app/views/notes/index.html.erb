<div class="row">
  <div class="span12">
    <h1>Listing notes</h1>

    <table class="table table-striped table-hover" id="notes">
      <thead>
        <tr>
          <th>Title</th>
          <th>Length</th>
          <th>Last updated</th>
        </tr>
      </thead>

      <tbody>
        <% @notes.each do |note| %>
          <tr>
            <td><%= link_to note.title, note %></td>
            <td><%= link_to note.content.split.size.to_s + ' words', note %></td>
            <td><%= link_to note.updated_at.strftime("%a %b %e, %Y - %T"), note %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Note', new_note_path %>
  </div>
</div>